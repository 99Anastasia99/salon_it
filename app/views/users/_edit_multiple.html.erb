<div class="container">
  <%= form_tag destroy_all_path(@user), method: :get do %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title" style="margin: 10px"><%=current_user.name %></h3>
            </div>

            <div class="col col-xs-6 text-right">
              <div class="btn-group mr-2" role="group" aria-label="First group">
                <%= submit_tag t('common.delete'), class: "btn btn-outline-danger" %>
              </div>
            </div>

          </div>
        </div>

        <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th><%= check_box_tag('check_all', 'check_all', false, :onClick => "checkAll(this);") %></th>
              <th><%= t('activerecord.attributes.user.name') %></th>
              <th><%= t('activerecord.attributes.user.email') %></th>
          </thead>

          <tbody>
            <% User.where(admin: false).all.each do |user| %>
            <tr>
              <td align="left"><%= check_box_tag "user_ids[]", user.id %></td>
              <td><%= best_in_place user,:name, :as => :input, id: "name",:ok_button => 'Save', :cancel_button => 'Cancel' %></td>
              <td><%= best_in_place user,:email, :as => :input, id: "email",:ok_button => 'Save', :cancel_button => 'Cancel' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
<% end %>
</div>
